<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <WebView
        android:id="@+id/about_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">
    </WebView>

    <Button
        android:id="@+id/about_feedback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible" />

    <TextView
        android:id="@+id/about_contactdetail_textView"
        android:layout_width="317dp"
        android:layout_height="65dp"
        android:layout_x="3dp"
        android:layout_y="60dp"
        android:text="Please contact us with email: \n empower@gmail.com"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/about_feedback_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_web_view"
        app:layout_constraintTop_toTopOf="@+id/about_web_view" />


    <TextView
        android:id="@+id/about_firestore_test"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@+id/about_feedback_button"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>